<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gyf="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <LinearLayout
                android:id="@+id/property_ll_title"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/property_card"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_total_labe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/my_etz_wallet"
                    android:textColor="#FFE3EAFC"
                    android:textSize="@dimen/zt_13sp" />
                <com.etzSharding.view.MText
                    android:id="@+id/tv_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="--"
                    android:textSize="@dimen/zt_32sp"
                    app:customTFont="BEBAS__.ttf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‰ˆ "
                        android:textColor="#B2C8FF"
                        android:textSize="@dimen/zt_13sp" />
                    <TextView
                        android:id="@+id/total_usdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#B2C8FF"
                        android:textSize="@dimen/zt_13sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/property_wallet_address"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/proterty_copy"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="34dp"
                android:src="@mipmap/wallet_lab" />
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="-45dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/property_scan"
                    android:gravity="center"
                    android:text="@string/property_scan"
                    android:textColor="@color/zt_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/property_zhuanzhang"
                    android:gravity="center"
                    android:text="@string/Button.send"
                    android:textColor="@color/zt_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/btn_receive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/property_shoukuan"
                    android:gravity="center"
                    android:text="@string/Button.receive"
                    android:textColor="@color/zt_black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_assets"
                android:textColor="@color/zt_black"
                android:layout_weight="1"
                android:textSize="@dimen/zt_18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/add_wallet"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"/>
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/home_wallet_rl"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/wallet_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:src="@mipmap/wallet_icon" />

            <TextView
                android:id="@+id/wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/wallet_icon"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/wallet_icon"
                android:text="ETZ"
                android:textColor="@color/zt_black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/wallet_trade_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/wallet_icon"
                android:layout_alignStart="@+id/wallet_name"
                android:text="EtherZero"
                android:textColor="@color/zt_hui"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wallet_balance_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/wallet_icon"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:textColor="@color/zt_black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/wallet_balance_fiat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/wallet_icon"
                android:layout_alignEnd="@id/wallet_balance_currency"
                android:textColor="@color/zt_hui"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/no_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:text="@string/assets_new_wallet"
                android:textColor="@color/zt_red"
                android:textSize="@dimen/zt_13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/dot_assets"
            android:textColor="@color/zt_black"
            android:textSize="@dimen/zt_18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/home_dot_rl"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/dot_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:src="@mipmap/dot_icon" />

            <TextView
                android:id="@+id/dot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dot_icon"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/dot_icon"
                android:text="ETZ"
                android:textColor="@color/zt_black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dot_trade_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dot_icon"
                android:layout_alignStart="@+id/dot_name"
                android:text="EtherZero"
                android:textColor="@color/zt_hui"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dot_balance_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/dot_icon"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:textColor="@color/zt_black"
                android:text="--"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/dot_balance_fiat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dot_icon"
                android:layout_alignEnd="@id/dot_balance_currency"
                android:textColor="@color/zt_hui"
                android:text="--"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>


    <!--<include layout="@layout/fragment_set" />-->

</android.support.v4.widget.DrawerLayout>