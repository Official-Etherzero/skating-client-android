<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/mnemonic_backup_alert_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/withdraw"
        android:textColor="@color/discovery_application_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/withdraw_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/withdraw_hint"
        android:textColor="@color/zt_red"
        android:textSize="@dimen/zt_12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/etc_transfer_hex_data_et_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/tixian_count"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/input_count_hint"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="16dp"
            android:text="ETZ"
            android:textColor="@color/discovery_application_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/tixian_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/etc_transfer_hex_data_et_shape"
        android:hint="@string/send_input_address"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/tixian_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/etc_transfer_hex_data_et_shape"
        android:hint="@string/login_err_pwd"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tixian_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_lu_huang"
            android:gravity="center"
            android:text="@string/Button.cancel"
            android:textColor="@color/zt_lu"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tixian_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/create_wallet_enable_btn_bg_shape"
            android:gravity="center"
            android:text="@string/input_pwd_dialog_confirm"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>