<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mnemonic_backup_alert_dialog_bg">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="273dp"
        android:background="@drawable/bread_dialog_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/robot_order_details"
            android:textColor="@color/zt_1001a"
            android:textSize="@dimen/zt_15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/robot_buy_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zt_1001a"
                android:textSize="@dimen/zt_13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/robot_create_time_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_buy_class"
                android:layout_marginTop="7dp"
                android:text="@string/robot_create_time"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/robot_create_time_tab"
                android:layout_alignParentRight="true"
                android:text="2019-10-11 12:09:09"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_period_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_create_time_tab"
                android:layout_marginTop="7dp"
                android:text="@string/robot_period"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/robot_period_tab"
                android:layout_alignParentRight="true"
                android:text="30å¤©"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_close_time_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_period_tab"
                android:layout_marginTop="7dp"
                android:text="@string/robot_colse_time"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_close_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/robot_close_time_tab"
                android:layout_alignParentRight="true"
                android:text="2019-10-11 12:09:09"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_day_output_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_close_time_tab"
                android:layout_marginTop="7dp"
                android:text="@string/first_year_yield"
                android:textColor="@color/zt_801a"
                android:textSize="@dimen/zt_11sp" />

            <TextView
                android:id="@+id/robot_day_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/robot_day_output_tab"
                android:layout_alignParentRight="true"
                android:text="0.001 UBI"
                android:textColor="@color/zt_red"
                android:textSize="@dimen/zt_11sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <EditText
            android:id="@+id/robot_buy_pwd"
            android:layout_width="201dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mnemonic_backup_bg"
            android:gravity="center"
            android:hint="@string/robot_buy_pwd"
            android:inputType="textPassword"
            android:textColorHint="@color/zt_301a"
            android:textSize="@dimen/zt_12sp" />


        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/robot_buy_cancel"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_lu_huang"
                android:text="@string/Button.cancel"
                android:textColor="@color/zt_lu"
                android:textSize="@dimen/zt_15sp" />

            <Button
                android:id="@+id/robot_buy_confirm"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:background="@drawable/create_wallet_enable_btn_bg_shape"
                android:text="@string/input_pwd_dialog_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/zt_13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
