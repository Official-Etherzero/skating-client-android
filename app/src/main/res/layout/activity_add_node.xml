<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".modules.dot.Node.AddNodeActivity">

    <include layout="@layout/title_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@mipmap/tiyan"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/novice_node"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_18sp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/first_year_yield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFE993"
                android:textSize="@dimen/zt_24sp"
                app:layout_constraintEnd_toStartOf="@+id/view7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/first_year_yield_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_year_yield"
                android:textColor="@color/zt_60fff"
                android:textSize="@dimen/zt_13sp"
                app:layout_constraintEnd_toStartOf="@+id/view7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_year_yield" />

            <View
                android:id="@+id/view7"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/node_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/node_cycle_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/node_cycle"
                android:textColor="@color/zt_60fff"
                android:textSize="@dimen/zt_13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view7"
                app:layout_constraintTop_toBottomOf="@+id/node_cycle" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tiyan_btn"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/node_1000_tiyan"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/add_bnaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="@string/solid_income"
        android:textColor="@color/zt_1001a"
        android:textSize="@dimen/zt_22sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_node_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clipToPadding="false" />


</LinearLayout>